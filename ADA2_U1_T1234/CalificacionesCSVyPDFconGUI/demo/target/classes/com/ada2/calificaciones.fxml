<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ada2.CalificacionesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <Label text="Ingreso de Calificaciones" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
   
   <Label fx:id="nombreAlumnoLabel" text="Alumno: " style="-fx-font-size: 14px;" />
   
   <HBox spacing="10.0" alignment="CENTER">
      <Label text="Calificación:" />
      <TextField fx:id="calificacionField" promptText="0-100" prefWidth="100" />
   </HBox>
   
   <Button text="Guardar Calificación" onAction="#handleGuardarCalificacion" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
   
   <Label fx:id="mensajeLabel" text="" style="-fx-text-fill: green;" />
   
   <Separator />
   
   <Button text="Generar PDF" onAction="#handleGenerarPDF" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
</VBox>